
<%= stylesheet_link_tag  "users/login", media: "all" %>

<!--=== Breadcrumbs ===-->
<div class="breadcrumbs margin-bottom-40">
    <div class="container">
        <h1 class="pull-left">Edit</h1>
        <ul class="pull-right breadcrumb">
            <li><a href="index.html">Home</a></li>
            <li><a href="">Login</a></li>
            <li class="active">Edit <%= resource_name.to_s.humanize %></li>
        </ul>
    </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->

<div class="container">   
  <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
              <div class="reg-page">
                  <div class="reg-header">            
                      <h2>Login to your account</h2>
                  </div>
                  <%= devise_error_messages! %>
                  <div class="input-group margin-bottom-20">
                      <span class="input-group-addon"><i class="fa fa-envelope"></i></i></span>
                      <%= f.email_field :email, :autofocus => true,placeholder: "Email", class: 'form-control' %>
                      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                      <% end %>
                  </div>
                   <i>(leave blank if you don't want to change it)</i>                    
                  <div class="input-group margin-bottom-20">
                      <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                      <%= f.password_field :password, placeholder: "Password", class: 'form-control' %>
                  </div>                  
                 
                  <div class="input-group margin-bottom-20">
                      <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                      <%= f.password_field :password_confirmation, placeholder: "Password confirmation", class: 'form-control' %>
                  </div>
                  <i>(we need your current password to confirm your changes)</i> 
                  <div class="input-group margin-bottom-20">
                      <span class="input-group-addon"><i class="fa fa-unlock"></i></span>
                      <%= f.password_field :current_password, placeholder: "Current password", class: 'form-control' %>
                  </div>
                                      

                  <div class="row">
                      <div class="col-md-12">
                          <button class="btn-u btn-block" type="submit">Update</button>                        
                      </div>
                  </div>
              </div>
          <% end %>
          <br>
          <div class="reg-page">
            <h3>Cancel my account</h3>

            <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: 'btn-u' %></p>

            <%= link_to "Back", :back %>
          </div>
        </div>
    </div><!--/row-->
</div>
<br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
