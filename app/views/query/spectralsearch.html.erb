<%= javascript_include_tag "voview" %>
<%= stylesheet_link_tag  "voview", media: "all" %>

<script type="text/javascript">//<![CDATA[
  /**
    Make a new VOView object.  The form containing the input information is 
    specified, as well as the widgetID, which is used below to indicate where 
    in the page the VOView display will be placed.
  **/
	myVoview =  new voview({input: {form: "searchForm"}, widgetID: "voviewTab"});
  /**
    Uncomment the line below to show an example of reformatting a column.  This
    example really only works with the example_input.xml file.
  **/
	// myVoview.renderObject.columnFormat("name", "<a onclick=\"return nw(this.href, this.target)\" href=\"http://simbad.u-strasbg.fr/sim-id.pl?protcol=html&Ident=@@&Frame3=G\" title=\"Link to Simbad details\">@@</a>");
	myVoview.renderObject.enableRowSelection();
  //]]>
</script>

<!--=== Breadcrumbs ===-->
<div class="breadcrumbs margin-bottom-40">
  <div class="container">
    <h1 class="pull-left">Simple Spectral Search</h1>
    <ul class="pull-right breadcrumb">
      <li><%= link_to 'Home', root_path %></li>
      <li>Services</li>
      <li class="active">Simple Spectral Search</li>
    </ul>
  </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->

<!--=== Content Part ===-->
<div class="container">   
  <div class="row margin-bottom-30">
  	<div class="col-md-6 md-margin-bottom-40 col-md-offset-3">
		
	  	<%= form_tag "/query/spectralsearch", remote: true, class: 'form-horizontal', role: 'form', name: 'searchForm' do %>
			  <div class="form-group">
			  	<%= label_tag :ra, 'RA', class: 'col-sm-2 control-label' %>
			    <div class="col-sm-8">
			    	<%= text_field_tag :ra, nil, class: 'form-control' %>
			    </div>
			  </div>
				<div class="form-group">
			  	<%= label_tag :dec, 'DEC', class: 'col-sm-2 control-label' %>
			    <div class="col-sm-8">
			    	<%= text_field_tag :dec, nil, class: 'form-control' %>
			    </div>
			  </div>
				<div class="form-group">
			  	<%= label_tag :diameter, 'Diameter', class: 'col-sm-2 control-label' %>
			    <div class="col-sm-8">
			    	<%= text_field_tag :diameter, nil, class: 'form-control' %>
			    </div>
			  </div>
			  
			  <div class="form-group">
			  	<%= label_tag :formato, 'Format', class: 'col-sm-2 control-label' %>
			    <div class="col-sm-8">
			    	<%= select_tag :formato, options_for_select(["FITS", "VOTable", "JPG", "Native", "Graphic"]), class: 'form-control' %>
			    </div>
		    </div>

			  <div class="form-group">
			    <div class="col-sm-offset-2 col-sm-10">
					<%= submit_tag 'Process', class: 'btn btn-default' %>
			    </div>
			  </div>
			<% end %>
		</div>
  </div>
  <div class="row margin-bottom-30">
  	<div class="col-md-12 md-margin-bottom-40">
  		<div class="voviewTab">
			</div>
  	</div>
  </div>
</div>

