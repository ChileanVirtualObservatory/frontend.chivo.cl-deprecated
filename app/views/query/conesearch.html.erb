<%= javascript_include_tag "voview" %>
<%= stylesheet_link_tag  "voview", media: "all" %>

<!--=== Breadcrumbs ===-->
<div class="breadcrumbs margin-bottom-40">
  <div class="container">
    <h1 class="pull-left">Simple Cone Search</h1>
    <ul class="pull-right breadcrumb">
      <li><%= link_to 'Home', root_path %></li>
      <li>Services</li>
      <li class="active">Simple Cone Search</li>
    </ul>
  </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->

<!--=== Content Part ===-->
<div class="container">   
  <div class="row margin-bottom-30">
  	<div class="col-md-6 md-margin-bottom-40 col-md-offset-3">

	  	<%= form_tag "/query/conesearch",remote: true, class: 'form-horizontal', role: 'form', method: 'get', name: 'searchForm' do %>
		
			  <div class="form-group">
			  	<%= label_tag :ra, 'RA', class: 'col-sm-2 control-label' %>
			    <div class="col-sm-8">
			    	<%= text_field_tag :ra, nil, class: 'form-control' %>
			    </div>
			  </div>
				<div class="form-group">
			  	<%= label_tag :dec, 'DEC', class: 'col-sm-2 control-label' %>
			    <div class="col-sm-8">
			    	<%= text_field_tag :dec, nil, class: 'form-control' %>
			    </div>
			  </div>
				<div class="form-group">
			  	<%= label_tag :radius, 'Radius (SR)', class: 'col-sm-2 control-label' %>
			    <div class="col-sm-8">
			    	<%= text_field_tag :radius, nil, class: 'form-control' %>
			    </div>
			  </div>
			  <div class="form-group">
			  	<%= label_tag :verbose, 'Verbosity', class: 'col-sm-2 control-label' %>
			    <div class="col-sm-8">
			    	<%= text_field_tag :verbose, nil, class: 'form-control' %>
			    </div>
			  </div>
			  <%= hidden_field_tag :sterm, "http://localhost:3000/example_input.xml", name: 'query_string' %>
			  <div class="form-group">
			    <div class="col-sm-offset-2 col-sm-10">
			      <button type="submit" class="btn btn-default" name="_submit">Process</button>
			    </div>
			  </div>
			<% end %>
		</div>
  </div>
  <div class="row margin-bottom-30">
  	<div class="col-md-12 md-margin-bottom-40">
  		<div class="voviewTab">
			</div>
  	</div>
  </div>
</div>

<br><br><br><br><br><br><br>