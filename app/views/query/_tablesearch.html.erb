<div class="page-header">
  <h1>Simple Table Search</h1>
</div>

<%= form_tag '#',  class: 'form-horizontal' do %>
	<%= select_tag :language, options_for_select(["ADQL", "PQL"])%>
	<%= text_area_tag :query, nil, rows: 5, class: 'input-xxlarge' %>
	
    <div class="form-actions">
		<%= submit_tag 'Search'%>  
	</div>
<% end %>

