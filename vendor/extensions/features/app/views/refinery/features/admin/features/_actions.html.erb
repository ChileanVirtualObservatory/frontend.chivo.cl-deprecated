<ul>
  <% if ::Refinery::Features::Admin::FeaturesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.features_admin_features_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_features_admin_feature_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Features::Admin::FeaturesController.sortable? && ::Refinery::Features::Feature.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Features"),
                 refinery.features_admin_features_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Features"),
                 refinery.features_admin_features_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
