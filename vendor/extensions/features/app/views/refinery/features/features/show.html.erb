<% content_for :body_content_title do %>
  <%= @feature.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @feature.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @feature.description %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @feature.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Video Url</h1>
    <p>
      <%=raw @feature.video_url %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="features">
      <% @features.each do |feature| %>
        <li>
          <%= link_to feature.title, refinery.features_feature_path(feature) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
